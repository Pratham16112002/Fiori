<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <SelectDialog
        id="selectDialog"
        title="Products"
        items="{ 
path : '/Employees' }"
        search=".onValueHelpSearch"
        confirm=".onValueHelpClose"
        cancel=".onValueHelpClose"
    >
        <StandardListItem
            title="{= ${FirstName} + ' ' + ${LastName}}"
            description="{EmployeeID}"
        />
    </SelectDialog>
</core:FragmentDefinition>
