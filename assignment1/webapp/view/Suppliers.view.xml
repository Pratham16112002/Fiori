<mvc:View
    xmlns:f="sap.f"
    controllerName="assignment1.controller.Suppliers"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
>
    <f:DynamicPage id="page">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title
                        text="Select store"
                        level="H1"
                    />
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader>
                    <HBox
                        justifyContent="Start"
                        alignContent="End"
                    >
                        <VBox>
                            <Label
                                text="Supplier"
                                labelFor="storeComboBox"
                            />
                            <ComboBox
                                id="storeComboBox"
                                width="12rem"
                                items="{ path: '/Suppliers' }"
                            >
                                <core:Item
                                    key="{SupplierID}"
                                    text="{CompanyName}"
                                />
                            </ComboBox>
                        </VBox>
                        <VBox class="sapUiMediumMarginBegin">
                            <Label
                                text="Employee"
                                labelFor="employeeName"
                            />
                            <Input
                                id="employeeName"
                                width="12rem"
                                value="{supplierViewConfig>/employeeInput/text}"
                                showValueHelp="true"
                                valueHelpRequest="onValueHelpRequested"
                            />
                        </VBox>
                        <VBox justifyContent="End">
                            <HBox>
                                <Button
                                    type="Emphasized"
                                    text="Go"
                                    press="onFilterHandler"
                                    class="sapUiTinyMarginBegin"
                                />
                                <Button
                                    id="clearFilter"
                                    type="Transparent"
                                    text="Clear"
                                    icon="sap-icon://decline"
                                    press="onClearFilter"
                                    visible="{supplierViewConfig>/clearFilter/visibility}"
                                    class="sapUiTinyMarginBegin"
                                />
                            </HBox>
                        </VBox>
                    </HBox>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <f:GridList>
                <f:items>
                    <CustomListItem class="sapUiTinyMargin">
                        <mvc:XMLView
                            id="oJsonDataView"
                            viewName="assignment1.view.cards.JsonCard"
                        />
                    </CustomListItem>
                    <CustomListItem class="sapUiTinyMargin">
                        <mvc:XMLView
                            id="oDataCardView2"
                            viewName="assignment1.view.cards.ODataCard"
                        />
                    </CustomListItem>
                    <CustomListItem class="sapUiTinyMargin">
                        <mvc:XMLView
                            id="oDataCardView3"
                            viewName="assignment1.view.cards.ODataCard2"
                        />
                    </CustomListItem>
                </f:items>
            </f:GridList>
        </f:content>
    </f:DynamicPage>
</mvc:View>
