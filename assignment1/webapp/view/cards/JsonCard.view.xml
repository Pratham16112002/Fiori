<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:cards="sap.f.cards"
    xmlns:f="sap.f"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <f:Card
        width="100%"
        height="22rem"
    >
        <f:header>
            <cards:Header
                title="Supplier Products"
                subtitle="Json Dummy"
            />
        </f:header>
        <f:content>
            <ScrollContainer
                vertical="true"
                horizontal="false"
                height="100%"
                width="100%"
            >
                <List
                    id="jsonProductList"
                    class="sapUiSmallMarginBottom"
                    showSeparators="None"
                    items="{
					path: 'jsonProducts>/'
				}"
                >
                    <CustomListItem>
                        <HBox
                            alignItems="Center"
                            justifyContent="SpaceBetween"
                        >
                            <VBox
                                class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom"
                            >
                                <Title
                                    level="H3"
                                    text="{jsonProducts>ProductName}"
                                    wrapping="true"
                                />
                                <Text text="{jsonProducts>Description}" />
                            </VBox>
                            <ObjectNumber 
                            class="sapUiTinyMargin"
                            number="{jsonProducts>Price}"
                            unit="{jsonProducts>Currency}"></ObjectNumber>
                        </HBox>
                    </CustomListItem>
                </List>
            </ScrollContainer>
        </f:content>
    </f:Card>
</mvc:View>
