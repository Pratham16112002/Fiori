<mvc:View
    xmlns:cards="sap.f.cards"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.f"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    controllerName="assignment1.controller.cards.ODataCard"
    core:require="{
        formatter : 'assignment1/utils/formatter'
    }"
    
>
    <f:Card
        width="100%"
        height="22rem"
    >
        <f:header>
            <cards:Header
                title="Supplier Products"
                subtitle="NorthWind"
            />
        </f:header>
        <f:content>
            <ScrollContainer
                vertical="true"
                horizontal="false"
                height="100%"
                width="100%"
            >
                <List
                    id="productList"
                    class="sapUiSmallMarginBottom"
                    showSeparators="Inner"
                    mode="None"
                    items="{
					path: '/Products'
				}"
                >
                    <CustomListItem >
                        <HBox
                            alignItems="Center"
                            justifyContent="SpaceBetween"
                        >
                            <VBox
                                class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom"
                            >
                                <Title
                                    level="H3"
                                    text="{ProductName}"
                                    wrapping="true"
                                />
                                <Text text="{QuantityPerUnit}" />
                                <Text text="{
                                    path: 'UnitPrice', 
                                    formatter: 'formatter.formatUnitPrice'
                                }"  />
                                <Button text="Details" type="Emphasized" press="onPressProductDetail"></Button>
                            </VBox>
                            <ObjectStatus
                                class="sapUiTinyMargin sapUiSmallMarginEnd"
                                text="{ path: 'UnitsInStock' , formatter: 'formatter.formatStockTextState'}"
                                state="{ path : 'UnitsInStock', formatter: 'formatter.formatStockStatus'}"
                            />
                        </HBox>
                    </CustomListItem>
                </List>
            </ScrollContainer>
        </f:content>
    </f:Card>
</mvc:View>

